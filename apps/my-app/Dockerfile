# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build my-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t my-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system my-app && \
          adduser --system -G my-app my-app

COPY dist/apps/my-app my-app
RUN chown -R my-app:my-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix my-app --omit=dev -f install

CMD [ "node", "my-app" ]
